  flex-direction: row;
  margin-left: 35rpx;
  background-color: #d2e6b3;
  color: #7cba23;
}

.top-text {
  width: 100rpx;
  height: 35rpx;

  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}
.left {
  width: 35rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  flex-direction:  column;
  align-items: center;

}
.flex-item {
  height: 100rpx;
}

